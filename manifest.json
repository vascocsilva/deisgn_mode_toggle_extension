{
  "name": "Design Mode Toggle",
  "description": "An extension to toggle document design mode on/off",
  "version": "1.2",
  "background": { "scripts": ["background.js"] },
  "browser_action": {
      "name": "Click to toggle",
      "default_icon": "icon1.png"
  },
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "tabs",
    "management",
    "contentSettings"
  ]
}
